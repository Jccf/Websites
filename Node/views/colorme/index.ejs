<input colorpicker class="span2" type="text" ng-model="colors.color" />
<style>
	.changeMe {
		width: 400px;
		height: 100px;
		background: blue;
	}
</style>
<div class="changeMe" ng-style="{background: colors.color}">
</div>

<button ng-click="save()">Save me</button>
