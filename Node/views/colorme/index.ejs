	$scope.colors = {};
	$scope.colors.color = '';



	function logColor () {
		console.log("changed color")
		console.log($scope.colors.color)
	}
	$scope.$watch('colors.color', logColor, true)
	$scope.save = function() {
		console.log($scope.colors.color)
	}
