<div class="container">
	<div class="jumbotron text-center">
		<form novalidate>
			<div>
				Join game <input ng-model="preGame.room" placeholder="Room"></input>
				Player <input ng-model="preGame.username" placeholder="Name"></input>
				<button class="btn btn-success" ng-click="joinRoom()">Join</button>
			</div>
		</form>
	</div>
	<div class="col-sm-4">
		<table class="table table-striped">
			<th>Active rooms with players!</th>
			<tr ng-repeat="room in roomsList">
				<td>{{room}}</td>
			</tr>
		</table>
	</div>
	<div draw colordata="draw.color" sizedata="draw.size" opacitydata="draw.opacity" roomdata="gameRoom">
		<!-- brush or eraser buttons -->
		<div class="btn-group" data-toggle="buttons">
			<button type="button" class="btn btn-default" ng-click="brushOrEraser('brush')">Brush</button>
			<button type="button" class="btn btn-default" ng-click="brushOrEraser('eraser')">Eraser</button>
		</div>
		<!-- colorpicker  -->
		<div id="colorPicker" ng-model="draw.color" colorpicker ng-style='{"background-color": draw.color}'></div>
		<!-- brush size and opacity  -->
		<input ng-model="draw.size" type="number" min="1" max="20">Size</input>
		<input ng-model="draw.opacity" type="number" min="0.1" max="1">Opacity</input>
	</div>
</div>


